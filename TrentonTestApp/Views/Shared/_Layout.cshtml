<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trenton B.V.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item d-flex align-items-center mr-2">
                    <a href='@Url.Action("Index", "Home")'>
                        <img src="~/Content/images/trentonlogo.png" style="width: 150px; height 200px;" />
                    </a>
                </li>
                <p> | </p>
                <li class="nav-item mr-1">
                    @Html.ActionLink("Urenregistratie", "Create", "Hours")
                </li>
                <p> | </p>
                <li class="nav-item mr-1">
                    @Html.ActionLink("Urenoverzicht", "Index", "Hours")
                </li>
                <p> | </p>
                <li class="nav-item">
                    @Html.ActionLink("Projectbeheer", "Index", "Projects")
                </li>
                <p> | </p>
                <li class="nav-item">
                    @Html.ActionLink("Accountbeheer", "Index", "Users")
                </li>
                <p> | </p>
            </ul>
        </nav>
    </header>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer class="bg-dark">
            <p class="p-footer">&copy; @DateTime.Now.Year - Trenton B.V.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
