@model IEnumerable<TrentonTestApp.User>

@{
    ViewBag.Title = "Index";
}

<hr />
<h2>Accountbeheer</h2>
<hr />


<p>
    @Html.ActionLink("Maak gebruiker aan", "Create")
    <br />
    @Html.ActionLink("Rollenbeheer", "../Roles/Index")
    <br />
    @Html.ActionLink("Maak status aan", "../status/Index")
</p>

<div class=" jumbotron">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password_Hash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.role1)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password_Hash)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.role1)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>